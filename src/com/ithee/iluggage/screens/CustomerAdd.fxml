                <TextField fx:id="tfAddress" GridPane.columnIndex="3" GridPane.columnSpan="3" GridPane.rowIndex="1" />
                <TextField fx:id="tfPostalcode" GridPane.columnIndex="3" GridPane.columnSpan="3" GridPane.rowIndex="2" />
                <TextField fx:id="tfHousenumber" GridPane.columnIndex="3" GridPane.rowIndex="3" />
                <TextField fx:id="tfAddition" GridPane.columnIndex="5" GridPane.rowIndex="3" />
            
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
        </GridPane>
    </top>
