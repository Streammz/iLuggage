<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ithee.iluggage.screens.MainMenu">
    <stylesheets>
        <URL value="@../../../../main.css" />
    </stylesheets>
    
    <top>
        <VBox alignment="CENTER_RIGHT" prefHeight="60" spacing="5" styleClass="mainheader">
            <padding><Insets bottom="10" left="10" right="10" top="10" /></padding>
            <children>
                <TextFlow textAlignment="RIGHT">
                    <children>
                        <Text text="U bent ingelogd als " />
                        <Text fx:id="loggedinUser" styleClass="italic" text="Admin" />
                    </children>
                </TextFlow>
                <Button onAction="#onPressLogout">
                    <text>Uitloggen</text> 
                </Button>
            </children>
        </VBox>
    </top>
    <center>
        <HBox style="-fx-border-color: black; -fx-border-style: solid hidden hidden hidden;">
         <children>
            <VBox alignment="BASELINE_CENTER" minWidth="210.0" spacing="10" style="-fx-border-color: black; -fx-border-style: hidden solid hidden hidden;" styleClass="buttonContainer" HBox.hgrow="ALWAYS">
               <children>
                  <Text styleClass="title" text="Bagage" underline="true" />
                  <Button onAction="#onPressFoundLuggage" text="Gevonden bagage invoeren">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </Button> 
                  <Button onAction="#onPressLostLuggage" text="Verloren bagage invoeren" />
                  <Button onAction="#onPressSearchLuggage" text="Bagage doorzoeken" />
               </children>
            </VBox>
            <VBox alignment="BASELINE_CENTER" minWidth="210.0" spacing="10" styleClass="buttonContainer" HBox.hgrow="ALWAYS">
               <children>
                  <Text styleClass="title" text="Klanten" underline="true" />
                  <Button onAction="#onPressAddCustomer" text="Klant invoeren">
                     <VBox.margin>
                        <Insets top="50.0" />
                     </VBox.margin>
                  </Button> 
                  <Button onAction="#onPressSearchCustomer" text="Klanten doorzoeken" />
               </children>
            </VBox>
            <VBox fx:id="rightSideBox" alignment="BASELINE_CENTER" minWidth="210.0" spacing="10" style="-fx-border-color: black; -fx-border-style: hidden hidden hidden solid;" styleClass="buttonContainer" HBox.hgrow="ALWAYS">
                <children>
                    <Text styleClass="title" text="Management" underline="true" />
                    <Button onAction="#onPressReport" text="Rapportage">
                       <VBox.margin>
                          <Insets top="20.0" />
                       </VBox.margin>
                    </Button>
                    
                    <Text fx:id="adminText" styleClass="title" text="Administratie" underline="true">
                        <VBox.margin>
                            <Insets top="50.0" />
                        </VBox.margin>
                    </Text>
                    <Button fx:id="adminButton" onAction="#onPressManageUsers" text="Medewerkers beheren">
                       <VBox.margin>
                          <Insets top="20.0" />
                       </VBox.margin>
                    </Button>
                </children>
            </VBox>
         </children>
        </HBox>
    </center>
</BorderPane>
