<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import com.ithee.iluggage.core.controls.*?>

<VBox prefHeight="180" prefWidth="400" styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ithee.iluggage.screens.LuggageDetails">
    <stylesheets>
        <URL value="@../../../../main.css" />
    </stylesheets>
    
    <children>
        <GridPane VBox.vgrow="ALWAYS">
            <rowConstraints>
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="10" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="40" />
                <RowConstraints minHeight="25" valignment="BOTTOM" />
                <RowConstraints minHeight="100" valignment="TOP" vgrow="ALWAYS" />
                <RowConstraints minHeight="50" valignment="BOTTOM"  />
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="150" />
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" minWidth="150" />
            </columnConstraints>
            <children>
                
                <Text text="Type/status" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Ingevoerd op" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Klant" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                
                <ChoiceBox fx:id="cbType" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <TextField fx:id="tfDate" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <SelectingTextField fx:id="tfCustomer" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                
                
                <Separator GridPane.columnSpan="4" GridPane.rowIndex="2" />
                
                <Text text="Soort" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Merk" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Stickers" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="5">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Overige kenmerken" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="6">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Kleur" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text text="Formaat" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                    <GridPane.margin>
                        <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                
                <ChoiceBox fx:id="cbKind" GridPane.columnIndex="1" GridPane.rowIndex="3" prefWidth="150" />
                <AutocompleteTextField fx:id="tfBrand" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <CheckBox fx:id="cbStickers" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                <AutocompleteTextField fx:id="tfColor" GridPane.columnIndex="3" GridPane.rowIndex="3"  />
                <HBox  GridPane.columnIndex="3" GridPane.rowIndex="4">
                    <children>
                        <TextField fx:id="tfSize1" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tfSize2" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="tfSize3" HBox.hgrow="ALWAYS" />
                    </children>
                </HBox>
                
                <TextArea fx:id="tfMisc" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="7" >
                    <GridPane.margin>
                        <Insets left="10" right="10" />
                    </GridPane.margin>
                </TextArea>
                
                <Button text="Opslaan" onAction="#onSave" GridPane.columnSpan="4" GridPane.rowIndex="8" GridPane.halignment="RIGHT" /> 
            </children>
        </GridPane>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>
