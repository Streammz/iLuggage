<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ithee.iluggage.screens.Login">
    <stylesheets>
        <URL value="@../../../../main.css" />
    </stylesheets>
    
    <center>
        <VBox alignment="CENTER" maxWidth="250.0" prefWidth="200.0" spacing="5.0">
            <children>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Text text="Username" textAlignment="RIGHT" wrappingWidth="120.0" />
                        <TextField fx:id="tfUsername" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Text text="Password" textAlignment="RIGHT" wrappingWidth="120.0" />
                        <PasswordField fx:id="tfPassword" onAction="#onLoginPressed" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Button onAction="#onLoginPressed" text="Login" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
    <top>
        <ImageView pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@../../../../corendon.png" />
            </image>
            <BorderPane.margin>
                <Insets bottom="-30.0" top="30.0" />
            </BorderPane.margin>
        </ImageView>
    </top>
    <bottom>
        <TextFlow BorderPane.alignment="CENTER">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Copyright Â© 2015 iThee All Rights Reserved" />
            </children>
            <BorderPane.margin>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
            </BorderPane.margin>
        </TextFlow>
    </bottom>
</BorderPane>
