<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="480.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ithee.iluggage.screens.Login">
    <stylesheets>
        <URL value="@../../../../main.css" />
    </stylesheets>
    
    <center>
        <VBox alignment="CENTER" maxWidth="250.0" prefWidth="200.0" spacing="5.0">
            <children>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Text text="Gebruikersnaam" textAlignment="RIGHT" wrappingWidth="100.0" />
                        <TextField fx:id="tfUsername" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Text text="Wachtwoord" textAlignment="RIGHT" wrappingWidth="100.0" />
                        <PasswordField fx:id="tfPassword" onAction="#onLoginPressed" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT" spacing="5.0">
                    <children>
                        <Button text="Inloggen" onAction="#onLoginPressed"  />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>
</BorderPane>
