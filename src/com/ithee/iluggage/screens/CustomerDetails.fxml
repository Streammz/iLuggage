                    </GridPane.margin>
                </Text>
                <Text style="-fx-font-weight: bold;" text="Toevoeging:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="4">
                    <GridPane.margin>
                       <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                
                <Text fx:id="txtAddress" text="...." GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Text fx:id="txtPostalCode" text="...." GridPane.columnIndex="1" GridPane.rowIndex="4" />
                <Text fx:id="txtHousenumber" text="...." GridPane.columnIndex="3" GridPane.rowIndex="3" />
                <Text fx:id="txtAddition" text="...." GridPane.columnIndex="3" GridPane.rowIndex="4" />
            </children>
        </GridPane>
    </children>
