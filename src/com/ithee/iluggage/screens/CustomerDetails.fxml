<VBox prefHeight="130.0" prefWidth="400" styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ithee.iluggage.screens.CustomerDetails">
    <stylesheets>
        <URL value="@../../../../main.css" />
    </stylesheets>
    
    <children>
        <GridPane alignment="CENTER_LEFT" VBox.vgrow="NEVER">
