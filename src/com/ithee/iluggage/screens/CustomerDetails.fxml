               <RowConstraints minHeight="20" />
               <RowConstraints minHeight="20" />
            </rowConstraints>
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" minWidth="100.0" />
                <ColumnConstraints hgrow="ALWAYS" />
                <ColumnConstraints hgrow="NEVER" minWidth="60.0" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <children>
                
                <Text style="-fx-font-weight: bold;" text="Naam:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                    <GridPane.margin>
                       <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                <Text style="-fx-font-weight: bold;" text="E-mailadres:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
