                </Text>
                <Text style="-fx-font-weight: bold;" text="Telefoonnummer:" GridPane.columnIndex="2" GridPane.halignment="RIGHT" GridPane.rowIndex="0">
                    <GridPane.margin>
                       <Insets left="10.0" right="5.0" />
                    </GridPane.margin>
                </Text>
                
                <Text fx:id="txtName" text="...." GridPane.columnIndex="1" GridPane.rowIndex="0" />
                <Text fx:id="txtEmail" text="...." GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <Text fx:id="txtPhone" text="...." GridPane.columnIndex="3" GridPane.rowIndex="0" />
                
                
                <Separator GridPane.columnSpan="4" GridPane.rowIndex="2" />
                
                <Text style="-fx-font-weight: bold;" text="Woonplaats:" GridPane.columnIndex="0" GridPane.halignment="RIGHT" GridPane.rowIndex="3">
