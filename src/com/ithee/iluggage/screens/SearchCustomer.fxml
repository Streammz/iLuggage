         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
        </GridPane>
    </top>
    <center>
        
    </center>
   <center>
      <VBox style="-fx-border-color: darkgray;" BorderPane.alignment="CENTER" fx:id="results" fillWidth="true" >
