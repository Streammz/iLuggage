<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="AnchorPane" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" fx:controller="com.ithee.iluggage.screens.SearchCustomer" >
    <top>
        <GridPane style="-fx-border-color: darkgray;">
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints />
            <ColumnConstraints hgrow="ALWAYS" />
            <ColumnConstraints />
         </columnConstraints>
         <children>
            <Text text="Naam" GridPane.halignment="RIGHT">
               <GridPane.margin>
                  <Insets left="20.0" right="5.0" />
               </GridPane.margin>
            </Text>
            <Text text="Email" GridPane.halignment="RIGHT" GridPane.rowIndex="1">
               <GridPane.margin>
                  <Insets left="20.0" right="5.0" />
               </GridPane.margin>
            </Text>
            <Text text="Woonplaats" GridPane.columnIndex="2" GridPane.halignment="RIGHT">
               <GridPane.margin>
                  <Insets left="20.0" right="5.0" />
               </GridPane.margin>
            </Text>
            
            <TextField fx:id="tfName" prefWidth="150.0" GridPane.columnIndex="1" />
            <TextField fx:id="tfEmail" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <TextField fx:id="tfAddress" prefWidth="150.0" GridPane.columnIndex="3" />
            
            <Button prefWidth="100.0" text="Zoek" GridPane.columnIndex="5" GridPane.halignment="RIGHT" GridPane.rowIndex="1" onAction="#onSearch" />
